<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Products page</title>
</head>
<body>
    <header>
        <nav class="navbar">
            <ul style="list-style-type: none;">
                <li class="nav-item"><a href="/" class="btn btn-success py-1" >Home</a></li>
                <li class="nav-item"><a href="/products-page" class="btn btn-success py-1">Products</a></li>
                <li class="nav-item"><a href="/add-product" class="btn btn-success py-1">Add products</a></li>
                <li class="nav-item"><a href="/" class="btn btn-success py-1"></a></li>
            </ul>
        </nav>
       </header>
    <h2>
        Available Products
    </h2>
    <table class="table table-dark table-hover">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Item</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Description</th>
            <th scope="col" colspan="2">Actions</th>
            <th scope="col"></th>
        </tr>
       <% for(let Items of Products){ %>
        <tr>
            <td><%=Items.id %></td>
            <td><%=Items.item %></td>
            <td><%=Items.price%></td>
            <td><img src="<%=Items.image %>" width="100px" height="100px" alt="product"></td>
            <td><%=Items.description %></td>
            <td><a href="/update-product/<%=Items.id %>" class="btn btn-success py-1">Update</a></td>
            <td>
                <form action="/delete-product" method="post">
                <input type="hidden" value="<%=Items.id %>" name="Id">
                <button type="submit" class="btn btn-danger py-1">Delete</button>
            </form>
        </td>
        </tr>
       <% } %>
    </table>
</body>
</html>