    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3 mt-4">
                    <h2> Add Product</h2>
                       <div class="card-body">
                        <form action="/add-product" method="post">
                      <div class="mb-3">
                        <label for="item" class="form-label">Item</label>
                        <input type="text" class="form-control"  name="Item" id="item" placeholder="Item">
